{
	"name": "@wambata/resu",
	"version": "0.1.4",
	"description": "Lightweight result wrapper for TypeScript with zero overhead and full control.",
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"types": "dist/types/index.d.ts",
	"engines": {
		"node": "*"
	},
	"files": [
		"dist",
		"./README.md"
	],
	"scripts": {
		"build": "rollup -c rollup.config.ts --configPlugin @rollup/plugin-typescript",
		"eslint": "eslint **/*.ts --fix --color",
		"release": "bun run build && bunx @changesets/cli version && bunx @changesets/cli publish",
		"types": "tsc"
	},
	"keywords": [
		"result",
		"ok",
		"error",
		"try",
		"flow",
		"typed",
		"type-safe",
		"typescript",
		"functional",
		"zero-runtime",
		"no-magic",
		"error-handling",
		"safe-execution",
		"control-flow",
		"pipe",
		"pipeline",
		"async"
	],
	"author": "Ruslan Radionov <cugune.tyan@gmail.com>",
	"bugs": {
		"url": "https://github.com/Deemoguse/wambata-resu/issues/new/choose",
		"email": "cugune.tyan@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Deemoguse/wambata-resu"
	},
	"devDependencies": {
		"@rollup/plugin-terser": "^0.4.4",
		"@rollup/plugin-typescript": "^12.1.2",
		"@types/node": "^22.15.30",
		"dts-bundle-generator": "^9.5.1",
		"rollup": "^4.42.0",
		"rollup-plugin-api-extractor": "^0.2.5"
	},
	"publishConfig": {
		"access": "public"
	},
	"license": "Apache-2.0"
}
