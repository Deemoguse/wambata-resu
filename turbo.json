{
	"$schema": "https://turborepo.com/schema.json",
	"ui": "tui",
	"tasks": {
		"dev": {
			"cache": false,
			"persistent": true
		},

		"build": {
			"dependsOn": ["@wambata/resu#build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/*"]
		},
		"@wambata/resu#build": {
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/*"]
		},

		"release": {
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/*"]
		}
	}
}
