{
	"$schema": "https://turborepo.com/schema.json",
	"ui": "tui",

	"tasks": {
		"@wambata/resu#build": {
			"dependsOn": ["test", "^test", "^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/*"]
		},

		"build": {
			"dependsOn": ["test", "^test", "^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/*"]
		},

		"dev": {
			"cache": false,
			"persistent": true
		},

		"test": {
			"cache": false
		}
	}
}
